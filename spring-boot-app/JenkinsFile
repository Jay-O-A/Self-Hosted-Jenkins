pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
        timestamps()
    }

    environment {
        MAVEN_IMAGE = 'abhishekf5/maven-abhishek-docker-agent:v1'
        DOCKER_REGISTRY = 'https://index.docker.io/v1/'
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
        SONAR_URL = "http://127.0.0.1:9000"
        GIT_REPO_NAME = "Self-Hosted-Jenkins"
        GIT_USER_NAME = "Jay-O-A"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test (Maven in Docker)') {
            steps {
                script {
                    docker.image(env.MAVEN_IMAGE).inside(
                        '--network host -v /var/run/docker.sock:/var/run/docker.sock'
                    ) {
                        sh '''
                            cd spring-boot-app
                            mvn clean package
                        '''
                    }
                }
            }
        }

        stage('Static Code Analysis (SonarQube)') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    script {
                        docker.image('maven:3.9.9-eclipse-temurin-17').inside(
                            '--network host '
                        ) {
                            sh '''
                                cd spring-boot-app
                                mvn clean verify \
                                  org.sonarsource.scanner.maven:sonar-maven-plugin:5.5.0.6356:sonar \
                                  -Dsonar.login=$SONAR_AUTH_TOKEN \
                                  -Dsonar.host.url=${SONAR_URL}
                            '''
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    cd spring-boot-app
                    docker build -t ${DOCKER_IMAGE} .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry(env.DOCKER_REGISTRY, 'docker-cred') {
                        docker.image(env.DOCKER_IMAGE).push()
                    }
                }
            }
        }

        stage('Update Deployment Manifest') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "adeniranjamiuo@gmail.com"
                        git config user.name "Jamiu Adeniran"

                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" spring-boot-app-manifests/deployment.yml

                        git add spring-boot-app-manifests/deployment.yml

                        git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"

                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
